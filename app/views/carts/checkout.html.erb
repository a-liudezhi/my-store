

<div class="row carts">
  <div class="col-md-10 col-md-offset-1 carts-box text-center">
<div class="flow pull-right">
  <table class="tb">
      <tr>
        <th>1.购物车</th>
        <th class="moment">2.提交订单</th>
        <th>3.选择付款方式</th>
        <th>4.购买成功</th>
      </tr>
  </table>
  </div>


    <table class="table">
    <thead class="little">
      <tr>
        <th width="70%">商品明细</th>
        <th>单价</th>
        <th>数量</th>
      </tr>
    </thead>

    <tbody class="table-middle">
      <% current_cart.cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
        </td>
        <td>
          <%= cart_item.product.price %>
        </td>
        <td>
          <%= cart_item.quantity %>
        </td>
      </tr>
      <% end %>

    </tbody>
    </table>

    <hr>

    <div class="total clearfix">
      <span class="pull-right">
        总计 <%= render_cart_total_price(current_cart) %> CNY
      </span>
    </div>

    <hr>

    <div class="order-form">

      <%= simple_form_for @order do |f| %>


      <div class="checkout">
        <%= f.submit "生成订单", class: "btn btn-lg btn-danger pull-right",
                      data: { disable_with: "Submitting..." } %>
      </div>
      <% end %>
    </div>
  </div>
</div>
