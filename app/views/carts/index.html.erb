<div class="row carts">
  <div class="col-md-10 col-md-offset-1 carts-box text-center">
<div class="flow pull-right">
  <table class="tb">
      <tr>
        <th class="moment">1.购物车</th>
        <th>2.提交订单</th>
        <th>3.选择付款方式</th>
        <th>4.购买成功</th>
      </tr>
  </table>

</div>
    <table class="table">
      <thead class="little">
        <tr>
          <th>项目</th>
          <th>单价</th>
          <th>数量</th>
          <th>考虑考虑</th>
        </tr>
      </thead>

      <tbody class="table-middle">
        <% current_cart.cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= link_to product_path(cart_item.product) do %>
            <% if cart_item.product.image.present? %>
            <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnail") %>
            <% else %>
            <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
            <% end %>

          </td>
          <td>
            ￥<%= cart_item.product.price %>
          </td>
          <td>
          <div class="count-input">
            <%= link_to("-", remove_quantity_cart_item_path(cart_item.product_id), method: :post) %>
            <input class="quantity" type="text" value="<%= cart_item.quantity %>">
            <%= link_to("+", add_quantity_cart_item_path(cart_item.product_id), method: :post) %>
          </div>
          </td>
          <td>
            <%= link_to cart_item_path(cart_item.product_id), method: :delete do %>
            <i class="fa fa-trash"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <hr>
    <div class="total clearfix">
      <span class="pull-right">
        <span>
          应付金额  <%= render_cart_total_price(current_cart) %> RMB
        </span>
      </span>
    </div>
    <hr>
    <div class="checkout clearfix">
      <%= link_to("提交订单", checkout_carts_path, method: :post, class: "btn btn-lg btn-danger pull-right") %>
    </div>

  </div>
</div>


</head>
